# Production Environment Variables for ianleblanc.ca
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
PROD_DB_USER=prod_user
PROD_DB_PASSWORD=your_secure_production_password_here_32chars_min

# Redis Configuration
PROD_REDIS_PASSWORD=your_secure_redis_password_here_32chars_min

# Grafana Configuration
PROD_GRAFANA_PASSWORD=your_secure_grafana_password_here

# Domain Configuration
DOMAIN_NAME=ianleblanc.ca
FRONTEND_URL=https://ianleblanc.ca
BACKEND_URL=https://ianleblanc.ca/api

# API Keys (REPLACE WITH YOUR ACTUAL VALUES)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=your_twilio_from_number_here
TWILIO_TO_NUMBER=your_twilio_to_number_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Qdrant Vector Database
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_URL=your_qdrant_url_here

# Microsoft OAuth (production - will need new redirect URIs)
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_APPLICATION_ID=your_microsoft_application_id_here
MICROSOFT_OAUTH_CLIENT_ID=your_microsoft_oauth_client_id_here
MICROSOFT_OAUTH_CLIENT_SECRET=your_microsoft_oauth_client_secret_here
MICROSOFT_OAUTH_REDIRECT_URI=https://ianleblanc.ca/api/oauth/microsoft/callback

# Google OAuth (production - will need new redirect URIs)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=https://ianleblanc.ca/api/oauth/google/callback

# YouTube OAuth (same as Google)
YOUTUBE_OAUTH_CLIENT_ID=your_youtube_oauth_client_id_here
YOUTUBE_OAUTH_CLIENT_SECRET=your_youtube_oauth_client_secret_here
YOUTUBE_OAUTH_REDIRECT_URI=https://ianleblanc.ca/api/oauth/google/callback

# Notion Integration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here
NOTION_WORKSPACE_ID=your_notion_workspace_id_here
NOTION_ROOT_PAGE_ID=your_notion_root_page_id_here
NOTION_OAUTH_CLIENT_ID=your_notion_oauth_client_id_here
NOTION_OAUTH_CLIENT_SECRET=your_notion_oauth_client_secret_here
NOTION_OAUTH_REDIRECT_URI=https://ianleblanc.ca/api/oauth/notion/callback

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here_32_chars_minimum
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Monitoring
PROMETHEUS_RETENTION_DAYS=30
PROMETHEUS_RETENTION_SIZE_GB=10 