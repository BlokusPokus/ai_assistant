# Personal Assistant Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED SETTINGS (must be configured for basic functionality)
# =============================================================================

# Database settings
DATABASE_URL=postgresql://user:password@localhost/personal_assistant

# Google API key for Gemini LLM functionality
GOOGLE_API_KEY=your_google_api_key_here

# Gemini model configuration (optional, default: gemini-2.5-flash)
# Available models: gemini-2.5-flash, gemini-1.5-flash, gemini-1.5-pro, etc.
# GEMINI_MODEL=gemini-2.5-flash

# =============================================================================
# OPTIONAL SETTINGS (configure based on your needs)
# =============================================================================

# Twilio settings (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_FROM_NUMBER=your_twilio_from_number_here
TWILIO_TO_NUMBER=your_twilio_to_number_here

# Additional Google services (optional)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Qdrant settings (for vector database)
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_URL=your_qdrant_url_here

# Microsoft settings (for email integration)
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_APPLICATION_ID=your_microsoft_application_id_here

# Notion settings (for knowledge management)
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here
NOTION_WORKSPACE_ID=your_notion_workspace_id_here

# =============================================================================
# APPLICATION SETTINGS (configure based on environment)
# =============================================================================

# Environment and debugging
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Conversation management
CONVERSATION_RESUME_WINDOW_MINUTES=30  
# Logging configuration
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_DIR=logs
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Module-specific log levels
CORE_LOG_LEVEL=INFO
LLM_LOG_LEVEL=DEBUG
MEMORY_LOG_LEVEL=INFO
RAG_LOG_LEVEL=INFO
TOOLS_LOG_LEVEL=INFO
TYPES_LOG_LEVEL=DEBUG

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# Celery settings (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Vector database settings
VECTOR_DB_URL=http://localhost:6333
MAX_MEMORY_RESULTS=5
LOOP_LIMIT=5

# State management settings
DEFAULT_MAX_MEMORY_CONTEXT_SIZE=20
DEFAULT_MAX_CONVERSATION_HISTORY_SIZE=20
DEFAULT_MAX_HISTORY_SIZE=20
DEFAULT_CONTEXT_WINDOW_SIZE=10 