{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Agent",
      "type": "python",
      "request": "launch",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "program": "src/personal_assistant/core/agent.py",
      "args": []
    },
    {
      "name": "Debug Agent Core",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/personal_assistant/core/agent.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Current Python File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Preview Markdown Diagrams",
      "type": "plantuml",
      "request": "launch",
      "paths": [
        "doc/context_diagram.md",
        "doc/component_diagram.md",
        "doc/container_diagram.md"
      ],
      "renderType": "markdown"
    },
    {
      "name": "Debug FastAPI (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["src.apps.fastapi_app.main:app", "--reload"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "jinja": true
    }
  ]
}
