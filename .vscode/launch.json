{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Agent Core",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/agent_core/core.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Current Python File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Preview Markdown Diagrams",
      "type": "plantuml",
      "request": "launch",
      "paths": [
        "doc/context_diagram.md",
        "doc/component_diagram.md",
        "doc/container_diagram.md"
      ],
      "renderType": "markdown"
    }
  ]
}
